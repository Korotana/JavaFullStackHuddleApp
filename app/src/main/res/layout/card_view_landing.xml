<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    android:id="@+id/card_container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp" >

        <TextView
            android:id="@+id/userNameCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#3F51B5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_text_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userageCardView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Activity:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#C90BEA"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/activity_name_text_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userageCardView"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@id/peopleRequired_text_holder"
            android:layout_toEndOf="@+id/activity_text_holder"
            android:layout_toRightOf="@id/activity_text_holder"
            android:maxWidth="125dp"
            android:text="Cricket"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#C90BEA"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/userageCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNameCardView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="About"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#B50404"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/peopleRequired_text_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userageCardView"
            android:layout_marginStart="200dp"
            android:layout_marginTop="12dp"
            android:text="People Required:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#00C308"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/size_text_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userageCardView"
            android:layout_marginStart="315dp"
            android:layout_marginTop="12dp"
            android:text="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#00C308"
            android:textSize="15sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>