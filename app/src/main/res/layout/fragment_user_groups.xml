<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_groups_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userGroups"
    >

        <Button
            android:id="@+id/create_group_in_user_groups"
            android:layout_width="401dp"
            android:layout_height="61dp"
            android:layout_marginStart="158dp"
            android:layout_marginEnd="159dp"
            android:text="CREATE GROUP"
            app:icon="@android:drawable/ic_menu_add"
            app:iconGravity="textEnd"
            app:iconTint="#252020"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_groups_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/create_group_in_user_groups"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:circularflow_radiusInDP="10"
            />

</androidx.constraintlayout.widget.ConstraintLayout>